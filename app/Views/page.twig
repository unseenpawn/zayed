{% extends "base.twig" %}
{% block content %}
  {% if slug == 'index' %}
    <section class="hero text-center text-light d-flex flex-column justify-content-center">
      <div class="container">
        <h1 class="display-4 mb-3">Willkommen in unserer Moschee</h1>
        <p class="lead mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
    </section>
  {% endif %}
  <div class="content container my-4">
    {{ content|raw }}
  </div>
  {% if posts is defined and posts %}
    <div class="container">
      <h2 class="mt-5">Blog</h2>
      {% for post in posts %}
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            <p class="card-text">{{ post.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}
